schemaVersion: 2.2.2
metadata:
  name: python
  displayName: Python
  description: "Python (version 3.11.x) is an interpreted, object-oriented, high-level programming language with dynamic semantics.
    Its high-level built in data structures, combined with dynamic typing and dynamic binding, make it very attractive for Rapid Application Development, as well as for use as a scripting or glue language to connect existing components together."
  icon: https://raw.githubusercontent.com/devfile-samples/devfile-stack-icons/main/python.svg
  tags:
    - Python
    - Pip
    - ML
    - Data Science
  projectType: Python
  language: Python
  provider: Red Hat
  version: 2.2.0
starterProjects:
  - name: rfb-poc
    description: 'RFB POC project for data analysis and synthetic data generation'
    git:
      remotes:
        origin: https://github.com/HugoPfeffer/rfb-poc
components:
  - name: py
    container:
      image: registry.access.redhat.com/ubi9/python-311:1
      args: ['tail', '-f', '/dev/null']
      mountSources: true
      endpoints:
        - name: jupyter
          targetPort: 8888
          protocol: https
        - exposure: none
          name: debug
          targetPort: 5858
      env:
        - name: DEBUG_PORT
          value: '5858'
commands:
  - id: pip-install-requirements
    exec:
      commandLine: |
        pip install scikit-learn matplotlib pandas numpy sdv faker jupyter
        if [ -f "requirements.txt" ]; then
          pip install -r requirements.txt
        fi
      workingDir: ${PROJECT_SOURCE}
      group:
        kind: build
        isDefault: true
      component: py
  - id: start-jupyter
    exec:
      commandLine: 'jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --allow-root --NotebookApp.token=""'
      workingDir: ${PROJECT_SOURCE}
      component: py
      group:
        kind: run
        isDefault: true