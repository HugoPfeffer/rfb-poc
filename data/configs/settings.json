{
    "random_seed": 102,
    "salary_distribution": {
        "normal_range": {
            "probability": 0.85,
            "min_ratio": 0.85,
            "max_ratio": 1.15
        },
        "low_outlier": {
            "probability": 0.09,
            "min_ratio": 0.60,
            "max_ratio": 0.85
        },
        "high_outlier": {
            "probability": 0.06,
            "min_ratio": 1.15,
            "max_ratio": 1.60
        }
    },
    "experience_levels": {
        "entry": {
            "probability": 0.4,
            "investment_rate": [0.05, 0.15],
            "luxury_spending": [0.0, 0.1],
            "travel_spending": [0.02, 0.08]
        },
        "mid": {
            "probability": 0.4,
            "investment_rate": [0.10, 0.25],
            "luxury_spending": [0.05, 0.15],
            "travel_spending": [0.05, 0.12]
        },
        "senior": {
            "probability": 0.2,
            "investment_rate": [0.15, 0.35],
            "luxury_spending": [0.1, 0.25],
            "travel_spending": [0.08, 0.20]
        }
    },
    "fraud_scenarios": {
        "probability": 0.18,
        "salary_misreporting": {
            "probability": 0.5,
            "min_ratio": 0.7,
            "max_ratio": 0.9
        },
        "suspicious_lifestyle": {
            "probability": 0.3,
            "min_ratio": 1.2,
            "max_ratio": 1.5
        },
        "rapid_transactions": {
            "probability": 0.2,
            "min_ratio": 1.1,
            "max_ratio": 1.3
        }
    },
    "asset_returns": {
        "stocks": {
            "return": 0.10,
            "volatility": 0.15
        },
        "bonds": {
            "return": 0.05,
            "volatility": 0.05
        },
        "cash": {
            "return": 0.02,
            "volatility": 0.01
        },
        "real_estate": {
            "return": 0.07,
            "volatility": 0.10
        }
    },
    "test_settings": {
        "default_test_size": 500,
        "large_test_size": 5000,
        "random_seed": 102,
        "delta_tolerance": 0.05,
        "lifestyle_thresholds": {
            "ratio_threshold": 0.4,
            "luxury_spending_ratio": 0.25
        },
        "asset_allocation": {
            "atol": 1e-4,
            "stocks_range": [0.4, 0.8],
            "bonds_range": [0.1, 0.4],
            "cash_range": [0.05, 0.2],
            "real_estate_range": [0.0, 0.2]
        },
        "validation": {
            "required_columns": {
                "base": ["id", "value", "category"],
                "employment": ["industry", "experience_level", "salary", "reported_salary"],
                "investment": [
                    "industry", "experience_level", "salary", "reported_salary",
                    "annual_investment", "stocks", "bonds", "cash", "real_estate", 
                    "expected_annual_return", "expected_value_1yr",
                    "luxury_spending", "travel_spending", "lifestyle_ratio",
                    "is_fraudulent", "fraud_type", "suspicious_lifestyle"
                ]
            }
        },
        "output_paths": {
            "test_data": "data/test",
            "temp": "data/temp"
        }
    }
}
